<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#57697a" />
            <stroke
                android:width="1dp"
                android:color="#868e96" />
            <corners
                android:radius="1dp" />
           
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#57697a"
                android:endColor="#868e96"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#868e96" />
            <corners
                android:radius="1dp" />
           
        </shape>
    </item>
</selector>