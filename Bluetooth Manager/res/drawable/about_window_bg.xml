<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#557077" />
            <stroke
                android:width="1dp"
                android:color="#2b4b53" />
            <corners
                android:radius="1dp" />
           
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#557077"
                android:endColor="#2b4b53"
                android:angle="90" />
            <stroke
                android:width="1dp"
                android:color="#2b4b53" />
            <corners
                android:radius="1dp" />
           
        </shape>
    </item>
</selector>