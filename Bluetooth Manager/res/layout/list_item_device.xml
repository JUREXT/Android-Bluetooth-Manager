<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:paddingTop="2dp"
    android:paddingBottom="2dp">
    
         <LinearLayout
        android:id="@+id/message_line2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
           android:background="@drawable/background_line"
        android:orientation="horizontal"     >   

    <Button
        android:id="@+id/btn_pair"
        android:layout_width="125dp"
        android:layout_height="fill_parent"        
            android:background="@drawable/layers_line_button_paired_bg"
        style="@style/ButtonText"
        android:text="@string/text_pair" />
    
        <LinearLayout
        android:id="@+id/message_line21"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
           android:background="@drawable/background_line_new_device"
        android:orientation="vertical" >
     >
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:layout_marginLeft="8dp"
        android:textColor="#052031"
        android:text="Galaxy Nexus xcxcxcx cxcxcxc xcxcxc xcxcxcx xcxcxcxc xcxcxcx" />
	
    <TextView
        android:id="@+id/tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:textColor="#234153"
        android:text="000000000" />
    </LinearLayout>
     </LinearLayout>   
</RelativeLayout>