<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/message_sel_line"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center_vertical|left"
    android:background="@drawable/main_background_line"
    android:orientation="horizontal" >
         
            <ImageView
            android:id="@+id/imageView1"
android:layout_width="35dp"  
  android:layout_height="35dp"  
  android:adjustViewBounds="true"  
  android:scaleType="fitCenter"  
  android:gravity="center_vertical"
       android:layout_gravity="top"
  android:layout_marginLeft="3dp" 
            android:src="@drawable/unselected_line" />

    <LinearLayout
        android:id="@+id/message_line2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:orientation="vertical" >
     >
             <TextView
                   android:paddingTop="2dp"
            android:id="@+id/device_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:gravity="left"
            android:minWidth="150dp"
            android:paddingBottom="2dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="device_address"
             android:textColor="#3f3232"
          
            android:textSize="17dp" />
     
             <TextView
            android:id="@+id/device_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:gravity="left"
            android:minWidth="150dp"
            android:paddingBottom="2dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="device_name"
             android:textColor="#777777"
            android:textSize="14dp"

             />





    </LinearLayout>

</LinearLayout>